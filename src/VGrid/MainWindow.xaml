<Window x:Class="VGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VGrid"
        xmlns:converters="clr-namespace:VGrid.Converters"
        xmlns:views="clr-namespace:VGrid.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="700" Width="1200"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <converters:ModeToColorConverter x:Key="ModeToColorConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:RowIndexToBrushConverter x:Key="RowIndexToBrushConverter"/>
        <converters:ColumnIndexToBrushConverter x:Key="ColumnIndexToBrushConverter"/>

        <!-- Excel-like DataGrid Style -->
        <Style x:Key="ExcelDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#D0D0D0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#D0D0D0"/>
            <Setter Property="RowHeaderWidth" Value="40"/>
            <Setter Property="ColumnHeaderHeight" Value="25"/>
            <Setter Property="BorderBrush" Value="#BEBEBE"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Excel-like Column Header Style -->
        <Style x:Key="ExcelColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource ColumnIndexToBrushConverter}">
                        <Binding Path="Column.DisplayIndex" RelativeSource="{RelativeSource Self}"/>
                        <Binding RelativeSource="{RelativeSource AncestorType=DataGrid}" Path="DataContext.VimState.CursorPosition.Column"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#BEBEBE"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ColumnHeader_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="MouseRightButtonUp" Handler="ColumnHeader_MouseRightButtonUp"/>
        </Style>

        <!-- Excel-like Row Header Style -->
        <Style x:Key="ExcelRowHeaderStyle" TargetType="DataGridRowHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource RowIndexToBrushConverter}">
                        <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}" Path="AlternationIndex"/>
                        <Binding RelativeSource="{RelativeSource AncestorType=DataGrid}" Path="DataContext.VimState.CursorPosition.Row"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#BEBEBE"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="40"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="RowHeader_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="MouseRightButtonUp" Handler="RowHeader_MouseRightButtonUp"/>
        </Style>

        <!-- Excel-like Row Style -->
        <Style x:Key="ExcelRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Excel-like Cell Style -->
        <Style x:Key="ExcelCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" SnapsToDevicePixels="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D4E7F7"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Padding" Value="4,2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewFileCommand}" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open File..." Command="{Binding OpenFileCommand}" InputGestureText="Ctrl+O"/>
                <MenuItem Header="Open _Folder..." Command="{Binding OpenFolderCommand}" InputGestureText="Ctrl+K Ctrl+O"/>
                <Separator/>
                <MenuItem Header="_Save" Command="{Binding SaveFileCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsFileCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Enable _Vim Mode"
                          IsCheckable="True"
                          IsChecked="{Binding IsVimModeEnabled, Mode=TwoWay}"/>
            </MenuItem>
            <MenuItem Header="_Git">
                <MenuItem Header="_View Git History..."
                          Command="{Binding ViewGitHistoryCommand}"
                          InputGestureText="Ctrl+G"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="30">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Border Background="{Binding StatusBarViewModel.ModeBrush}"
                            CornerRadius="3" Padding="8,2" Margin="0,0,10,0">
                        <TextBlock Text="{Binding StatusBarViewModel.ModeText}"
                                   Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="{Binding StatusBarViewModel.PositionText}"
                               Margin="10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusBarViewModel.MessageText}"
                               Margin="20,0" VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area with Splitter -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel with Tabs -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                <TabControl TabStripPlacement="Bottom">
                    <!-- EXPLORER Tab -->
                    <TabItem Header="EXPLORER">
                        <DockPanel Background="#FAFAFA">
                            <!-- Header Section -->
                            <Border DockPanel.Dock="Top" Background="#FFFFFF"
                                    BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Filter Box -->
                                    <Border  Background="#F8F8F8"
                                            BorderBrush="#D0D0D0" BorderThickness="1"
                                            CornerRadius="3" Padding="0">
                                        <Grid>
                                            <TextBlock Text="ðŸ” ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼..."
                                                       Foreground="#AAAAAA"
                                                       Margin="8,4,8,4"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding FilterText}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FilterText}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                                                     Height="28"
                                                     Padding="8,4,8,4"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     VerticalContentAlignment="Center"
                                                     FontSize="12"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- TreeView -->
                            <TreeView x:Name="FolderTreeView"
                                      BorderThickness="0"
                                      Background="#FAFAFA"
                                      Margin="0"
                                      Padding="6"
                                      KeyDown="FolderTreeView_KeyDown"
                                      MouseRightButtonUp="FolderTreeView_MouseRightButtonUp"
                                      FontSize="12">
                                <TreeView.Resources>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="Padding" Value="2"/>
                                        <Setter Property="Margin" Value="0,1,0,1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TreeView.Resources>
                                <!-- Tree items will be populated in code-behind -->
                            </TreeView>
                        </DockPanel>
                    </TabItem>

                    <!-- Git Changes Tab -->
                    <TabItem Header="Gitå¤‰æ›´">
                        <DockPanel Background="#F5F5F5">
                            <!-- Commit Message and Button (Bottom) -->
                            <Border DockPanel.Dock="Bottom" Height="100" Padding="5" Background="#F5F5F5">
                                <DockPanel>
                                    <Button DockPanel.Dock="Bottom" Content="Commit"
                                            Command="{Binding GitChangesViewModel.CommitCommand}"
                                            Width="Auto" Margin="5,5,5,5"
                                            HorizontalAlignment="Left" Padding="10,3"/>

                                    <TextBox Text="{Binding GitChangesViewModel.CommitMessage, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"
                                             BorderBrush="#CCCCCC" BorderThickness="1"
                                             Margin="5" Padding="5">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Modifiers="Ctrl"
                                                        Command="{Binding GitChangesViewModel.CommitCommand}"/>
                                        </TextBox.InputBindings>
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <VisualBrush AlignmentX="Left" AlignmentY="Top" Stretch="None">
                                                                    <VisualBrush.Visual>
                                                                        <TextBlock Text="Commit message (Ctrl+Enter to commit)..."
                                                                                  Foreground="#999" Margin="5,2,0,0"/>
                                                                    </VisualBrush.Visual>
                                                                </VisualBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </DockPanel>
                            </Border>

                            <!-- Uncommitted Files List (Fill remaining space) -->
                            <ListBox ItemsSource="{Binding GitChangesViewModel.UncommittedFiles}"
                                     Background="White" BorderBrush="#CCCCCC" BorderThickness="1"
                                     Margin="5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="2">
                                            <CheckBox IsChecked="{Binding IsSelected}"
                                                      VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding StatusText}"
                                                       FontWeight="Bold" Width="20"
                                                       Foreground="Orange" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding RelativePath}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="ç·¨é›†"
                                                  Command="{Binding GitChangesViewModel.EditFileCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <MenuItem Header="å·®åˆ†è¡¨ç¤º"
                                                  Command="{Binding GitChangesViewModel.ShowDiffCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <Separator/>
                                        <MenuItem Header="ã‚¨ã‚¯ã‚¹ãƒ—ãƒ­ãƒ¼ãƒ©ãƒ¼ã§ãƒ•ã‚©ãƒ«ãƒ€ã‚’é–‹ã"
                                                  Command="{Binding GitChangesViewModel.OpenFolderCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <MenuItem Header="ã‚¨ãƒ‡ã‚£ã‚¿ã§é–‹ã"
                                                  Command="{Binding GitChangesViewModel.OpenInEditorCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <Separator/>
                                        <MenuItem Header="å…ƒã«æˆ»ã™"
                                                  Command="{Binding GitChangesViewModel.RevertFileCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    </ContextMenu>
                                </ListBox.ContextMenu>
                            </ListBox>
                        </DockPanel>
                    </TabItem>

                    <!-- Template Tab -->
                    <TabItem Header="Template">
                        <DockPanel Background="#FAFAFA">
                            <!-- Toolbar -->
                            <Border DockPanel.Dock="Top" Background="#FFFFFF"
                                    BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="+ æ–°è¦" Click="NewTemplateButton_Click"
                                            Padding="8,4" Margin="0,0,4,0"
                                            Background="#F0F0F0" BorderBrush="#D0D0D0"
                                            ToolTip="æ–°ã—ã„ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆã‚’ä½œæˆ"/>
                                    <Button Content="ðŸ“ ãƒ•ã‚©ãƒ«ãƒ€" Click="NewTemplateFolderButton_Click"
                                            Padding="8,4" Margin="0,0,4,0"
                                            Background="#F0F0F0" BorderBrush="#D0D0D0"
                                            ToolTip="æ–°ã—ã„ãƒ•ã‚©ãƒ«ãƒ€ã‚’ä½œæˆ"/>
                                    <Button Content="â†»" Click="RefreshTemplateButton_Click"
                                            Padding="8,4"
                                            Background="#F0F0F0" BorderBrush="#D0D0D0"
                                            ToolTip="ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆä¸€è¦§ã‚’æ›´æ–°"/>
                                </StackPanel>
                            </Border>

                            <!-- TreeView for Templates -->
                            <TreeView x:Name="TemplateTreeView"
                                      BorderThickness="0"
                                      Background="#FAFAFA"
                                      Margin="0"
                                      Padding="6"
                                      KeyDown="TemplateTreeView_KeyDown"
                                      MouseRightButtonUp="TemplateTreeView_MouseRightButtonUp"
                                      FontSize="12">
                                <TreeView.Resources>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="Padding" Value="2"/>
                                        <Setter Property="Margin" Value="0,1,0,1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TreeView.Resources>
                            </TreeView>
                        </DockPanel>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Tab Control (Right Panel) -->
            <TabControl Grid.Column="2"
                        ItemsSource="{Binding Tabs}"
                        SelectedItem="{Binding SelectedTab}"
                        Margin="0" BorderThickness="0">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" MouseDown="TabHeader_MouseDown">
                            <TextBlock Text="{Binding Header}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Button Content="Ã—" FontSize="14" FontWeight="Bold"
                                    Width="18" Height="18"
                                    Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Background="Transparent" BorderThickness="0"
                                    Cursor="Hand" ToolTip="Close"/>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <!-- DataGrid Layer -->
                            <Border BorderBrush="Gray" BorderThickness="0" Margin="0">
                                <DataGrid x:Name="TsvGrid"
                                          ItemsSource="{Binding GridViewModel.Rows}"
                                          AlternationCount="999999"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          CanUserReorderColumns="False"
                                          CanUserSortColumns="False"
                                          IsReadOnly="False"
                                          SelectionMode="Extended"
                                          SelectionUnit="Cell"
                                          DataContextChanged="TsvGrid_OnDataContextChanged"
                                          BeginningEdit="TsvGrid_BeginningEdit"
                                          CellEditEnding="TsvGrid_CellEditEnding"
                                          HeadersVisibility="All"
                                          Focusable="False"
                                          EnableRowVirtualization="True"
                                          EnableColumnVirtualization="True"
                                          VirtualizingPanel.IsVirtualizing="True"
                                          VirtualizingPanel.VirtualizationMode="Recycling"
                                          Style="{StaticResource ExcelDataGridStyle}"
                                          ColumnHeaderStyle="{StaticResource ExcelColumnHeaderStyle}"
                                          RowHeaderStyle="{StaticResource ExcelRowHeaderStyle}"
                                          RowStyle="{StaticResource ExcelRowStyle}"
                                          CellStyle="{StaticResource ExcelCellStyle}"
                                          FontFamily="Segoe UI"
                                          FontSize="11"
                                          Loaded="TsvGrid_Loaded"
                                          Margin="0">
                                    <!-- Columns will be generated dynamically in code-behind -->
                                </DataGrid>
                            </Border>

                            <!-- Find/Replace Panel Overlay -->
                            <views:FindReplacePanel DataContext="{Binding FindReplaceViewModel}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="20,10,20,0"
                                                   Panel.ZIndex="100"/>
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
