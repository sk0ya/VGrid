<Window x:Class="VGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VGrid"
        xmlns:converters="clr-namespace:VGrid.Converters"
        xmlns:views="clr-namespace:VGrid.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="700" Width="1200"
        Background="{DynamicResource WindowBackgroundBrush}"
        PreviewKeyDown="Window_PreviewKeyDown"
        WindowStyle="None"
        AllowsTransparency="False">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <converters:ModeToColorConverter x:Key="ModeToColorConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:RowIndexToBrushConverter x:Key="RowIndexToBrushConverter"/>
        <converters:ColumnIndexToBrushConverter x:Key="ColumnIndexToBrushConverter"/>
        <converters:SidebarViewToBoolConverter x:Key="SidebarViewToBoolConverter"/>
        <converters:SidebarViewToVisibilityConverter x:Key="SidebarViewToVisibilityConverter"/>
        <converters:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter" OpenWidth="250"/>

        <!-- DataGrid SelectAll Button Style (top-left corner) -->
        <Style x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type DataGrid}, ResourceId=DataGridSelectAllButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{DynamicResource DataGridSelectAllButtonBrush}"
                                BorderBrush="{DynamicResource DataGridBorderBrush}"
                                BorderThickness="0,0,1,1"
                                SnapsToDevicePixels="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Excel-like DataGrid Style -->
        <Style x:Key="ExcelDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource DataGridBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource DataGridForegroundBrush}"/>
            <Setter Property="RowBackground" Value="{DynamicResource DataGridRowBackgroundBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource DataGridRowBackgroundBrush}"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource DataGridGridLinesBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource DataGridGridLinesBrush}"/>
            <Setter Property="RowHeaderWidth" Value="40"/>
            <Setter Property="ColumnHeaderHeight" Value="25"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DataGridBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Excel-like Column Header Style -->
        <Style x:Key="ExcelColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource ColumnIndexToBrushConverter}">
                        <Binding Path="Column.DisplayIndex" RelativeSource="{RelativeSource Self}"/>
                        <Binding RelativeSource="{RelativeSource AncestorType=DataGrid}" Path="DataContext.VimState.CursorPosition.Column"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{DynamicResource DataGridHeaderForegroundBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DataGridBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ColumnHeader_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="PreviewMouseMove" Handler="ColumnHeader_PreviewMouseMove"/>
            <EventSetter Event="PreviewMouseLeftButtonUp" Handler="ColumnHeader_PreviewMouseLeftButtonUp"/>
            <EventSetter Event="MouseRightButtonUp" Handler="ColumnHeader_MouseRightButtonUp"/>
        </Style>

        <!-- Excel-like Row Header Style -->
        <Style x:Key="ExcelRowHeaderStyle" TargetType="DataGridRowHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource RowIndexToBrushConverter}">
                        <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}" Path="AlternationIndex"/>
                        <Binding RelativeSource="{RelativeSource AncestorType=DataGrid}" Path="DataContext.VimState.CursorPosition.Row"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{DynamicResource DataGridHeaderForegroundBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DataGridBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="40"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="RowHeader_PreviewMouseLeftButtonDown"/>
            <EventSetter Event="PreviewMouseMove" Handler="RowHeader_PreviewMouseMove"/>
            <EventSetter Event="PreviewMouseLeftButtonUp" Handler="RowHeader_PreviewMouseLeftButtonUp"/>
            <EventSetter Event="MouseRightButtonUp" Handler="RowHeader_MouseRightButtonUp"/>
        </Style>

        <!-- Excel-like Row Style -->
        <Style x:Key="ExcelRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource DataGridRowBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Excel-like Cell Style -->
        <Style x:Key="ExcelCellStyle" TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{DynamicResource DataGridForegroundBrush}"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border x:Name="CellBorder"
                                Background="{DynamicResource DataGridBackgroundBrush}"
                                BorderBrush="{DynamicResource DataGridCellBorderBrush}"
                                BorderThickness="0,0,1,1"
                                Padding="4,2"
                                SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="CellBorder" Property="Background" Value="{DynamicResource DataGridCellSelectedBrush}"/>
                                <Setter TargetName="CellBorder" Property="BorderBrush" Value="{DynamicResource DataGridCellSelectedBorderBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Popup Border Style for Menus -->
        <SolidColorBrush x:Key="{x:Static SystemColors.MenuBarBrushKey}" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.MenuBrushKey}" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="#E0E0E0"/>

        <!-- ContextMenu Style for Dark Theme -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="{DynamicResource MenuBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource MenuForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MenuBorderBrush}"/>
            <Setter Property="HasDropShadow" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{DynamicResource MenuBackgroundBrush}"
                                BorderBrush="{DynamicResource MenuBorderBrush}"
                                BorderThickness="1"
                                Padding="0">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Submenu Popup Style -->
        <ControlTemplate x:Key="MenuItemSubmenuTemplate" TargetType="MenuItem">
            <Border x:Name="Border" Background="Transparent" BorderThickness="0">
                <Grid>
                    <ContentPresenter x:Name="HeaderHost" ContentSource="Header" Margin="8,4" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    <Popup x:Name="PART_Popup"
                           AllowsTransparency="True"
                           Focusable="False"
                           IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           Placement="Bottom"
                           PopupAnimation="Fade">
                        <Border Background="{DynamicResource MenuBackgroundBrush}"
                                BorderBrush="{DynamicResource MenuBorderBrush}"
                                BorderThickness="1">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </Popup>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource MenuBorderBrush}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Submenu Item Template -->
        <ControlTemplate x:Key="MenuItemItemTemplate" TargetType="MenuItem">
            <Border x:Name="Border" Background="Transparent" BorderThickness="0" Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Icon"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter x:Name="Icon" ContentSource="Icon" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <ContentPresenter Grid.Column="1" ContentSource="Header" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    <TextBlock Grid.Column="2" Text="{TemplateBinding InputGestureText}" Margin="20,0,0,0"
                               Foreground="{DynamicResource MenuForegroundBrush}" Opacity="0.7" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource MenuBorderBrush}"/>
                </Trigger>
                <Trigger Property="Icon" Value="{x:Null}">
                    <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Submenu Header Template (for items with submenus in context menus) -->
        <ControlTemplate x:Key="MenuItemSubmenuHeaderTemplate" TargetType="MenuItem">
            <Border x:Name="Border" Background="Transparent" BorderThickness="0" Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Icon"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter x:Name="Icon" ContentSource="Icon" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <ContentPresenter Grid.Column="1" ContentSource="Header" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    <Path Grid.Column="2" Data="M0,0 L4,4 L0,8"
                          Fill="{DynamicResource MenuForegroundBrush}"
                          Margin="16,0,0,0" VerticalAlignment="Center" Width="4" Height="8"/>
                    <Popup x:Name="PART_Popup"
                           AllowsTransparency="True"
                           Focusable="False"
                           IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           Placement="Right"
                           HorizontalOffset="-2"
                           PopupAnimation="Fade">
                        <Border Background="{DynamicResource MenuBackgroundBrush}"
                                BorderBrush="{DynamicResource MenuBorderBrush}"
                                BorderThickness="1">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </Popup>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource MenuBorderBrush}"/>
                </Trigger>
                <Trigger Property="Icon" Value="{x:Null}">
                    <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Menu Item Style for Dark Theme -->
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="{DynamicResource MenuBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource MenuForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MenuBorderBrush}"/>
            <Style.Triggers>
                <Trigger Property="Role" Value="TopLevelHeader">
                    <Setter Property="Template" Value="{StaticResource MenuItemSubmenuTemplate}"/>
                </Trigger>
                <Trigger Property="Role" Value="SubmenuItem">
                    <Setter Property="Template" Value="{StaticResource MenuItemItemTemplate}"/>
                </Trigger>
                <Trigger Property="Role" Value="SubmenuHeader">
                    <Setter Property="Template" Value="{StaticResource MenuItemSubmenuHeaderTemplate}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Separator Style -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="{DynamicResource MenuBorderBrush}"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Height" Value="1"/>
        </Style>

        <!-- TreeViewItem Expander Button Style -->
        <Style x:Key="TreeViewItemExpanderStyle" TargetType="ToggleButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Width="16" Height="16">
                            <Path x:Name="ExpandPath"
                                  Data="M0,0 L0,6 L6,0 z"
                                  Fill="Transparent"
                                  Stroke="{DynamicResource TreeViewForegroundBrush}"
                                  StrokeThickness="1"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="135"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ExpandPath" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ExpandPath" Property="Fill" Value="{DynamicResource TreeViewForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ExpandPath" Property="Stroke" Value="{DynamicResource ActivityBarActiveForegroundBrush}"/>
                                <Setter TargetName="ExpandPath" Property="Fill" Value="{DynamicResource ActivityBarActiveForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TreeViewItem Style with proper selection highlighting -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="{DynamicResource TreeViewForegroundBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="0,1,0,1"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="Expander"
                                                  ClickMode="Press"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Style="{StaticResource TreeViewItemExpanderStyle}"/>
                                    <ContentPresenter x:Name="PART_Header"
                                                      Grid.Column="1"
                                                      ContentSource="Header"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="Center"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </Grid>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" Margin="16,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True" SourceName="Bd">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SidebarItemHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SidebarItemSelectedBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TreeViewForegroundBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsSelectionActive" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SidebarItemSelectedBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TreeViewForegroundBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Activity Bar Button Style -->
        <Style x:Key="ActivityBarButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ActivityBarForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="LeftIndicator"
                                    Width="2"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"/>
                            <Border x:Name="BackgroundBorder"
                                    Background="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource ActivityBarActiveForegroundBrush}"/>
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="{DynamicResource ActivityBarHoverBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource ActivityBarActiveForegroundBrush}"/>
                                <Setter TargetName="LeftIndicator" Property="Background" Value="{DynamicResource ActivityBarIndicatorBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel Background="{DynamicResource WindowBackgroundBrush}">
        <!-- Custom Title Bar with Menu -->
        <Grid DockPanel.Dock="Top" Height="32" Background="{DynamicResource TitleBarBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Menu and Repository Info (Left) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Menu Background="Transparent"
                      WindowChrome.IsHitTestVisibleInChrome="True" Margin="8,0,0,0">
                        <MenuItem Header="_File"
                                  Foreground="{DynamicResource TitleBarForegroundBrush}">
                            <MenuItem Header="_New" Command="{Binding NewFileCommand}" InputGestureText="Ctrl+N"/>
                            <MenuItem Header="_Open File..." Command="{Binding OpenFileCommand}" InputGestureText="Ctrl+O"/>
                            <MenuItem Header="Open _Folder..." Command="{Binding OpenFolderCommand}" InputGestureText="Ctrl+K Ctrl+O"/>
                            <Separator/>
                            <MenuItem Header="_Save" Command="{Binding SaveFileCommand}" InputGestureText="Ctrl+S"/>
                            <MenuItem Header="Save _As..." Command="{Binding SaveAsFileCommand}"/>
                            <Separator/>
                            <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
                        </MenuItem>
                    <MenuItem Header="_Git"
                              Foreground="{DynamicResource TitleBarForegroundBrush}">
                        <MenuItem Header="_Fetch"
                                  Command="{Binding GitFetchCommand}"
                                  InputGestureText="Ctrl+Shift+F"/>
                        <MenuItem Header="_Pull"
                                  Command="{Binding GitPullCommand}"
                                  InputGestureText="Ctrl+Shift+P"/>
                        <MenuItem Header="Pu_sh"
                                  Command="{Binding GitPushCommand}"
                                  InputGestureText="Ctrl+Shift+U"/>
                        <Separator/>
                        <MenuItem Header="_Branches..."
                                  Command="{Binding ViewGitBranchesCommand}"
                                  InputGestureText="Ctrl+B"/>
                        <MenuItem Header="View _History..."
                                  Command="{Binding ViewGitHistoryCommand}"
                                  InputGestureText="Ctrl+G"/>
                    </MenuItem>
                </Menu>

                <!-- Repository Info (Left side) -->
                <TextBlock Text="{Binding RepositoryInfo}" FontSize="12"
                           Foreground="{DynamicResource TitleBarForegroundBrush}"
                           VerticalAlignment="Center" Margin="12,0,0,0"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- App Title (Center) -->
            <TextBlock Grid.Column="1" Text="{Binding WindowTitle}" FontSize="12"
                       Foreground="{DynamicResource TitleBarForegroundBrush}"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       Opacity="0.7"/>

            <!-- Window Control Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button x:Name="MinimizeButton" Click="MinimizeButton_Click"
                        Width="46" Height="32" BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        ToolTip="Minimize">
                    <Path Data="M0,5 L10,5" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="1" Width="10" Height="10"/>
                </Button>
                <Button x:Name="MaximizeButton" Click="MaximizeButton_Click"
                        Width="46" Height="32" BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        ToolTip="Maximize">
                    <Path x:Name="MaximizeIcon" Data="M0,0 L10,0 L10,10 L0,10 Z"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="1" Fill="Transparent" Width="10" Height="10"/>
                </Button>
                <Button x:Name="CloseButton" Click="CloseButton_Click"
                        Width="46" Height="32" BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        ToolTip="Close">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Path Data="M0,0 L10,10 M10,0 L0,10"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="1" Width="10" Height="10"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="30"
                   Background="{DynamicResource StatusBarBackgroundBrush}">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Border Background="{Binding StatusBarViewModel.ModeBrush}"
                            CornerRadius="3" Padding="8,2" Margin="0,0,10,0">
                        <TextBlock Text="{Binding StatusBarViewModel.ModeText}"
                                   Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="{Binding StatusBarViewModel.PositionText}"
                               Foreground="{DynamicResource StatusBarForegroundBrush}"
                               Margin="10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusBarViewModel.MessageText}"
                               Foreground="{DynamicResource StatusBarForegroundBrush}"
                               Margin="20,0" VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area with Splitter -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition x:Name="SidebarColumn" Width="250" MinWidth="0"/>
                <ColumnDefinition x:Name="SplitterColumn" Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Activity Bar -->
            <Border Grid.Column="0" Background="{DynamicResource ActivityBarBackgroundBrush}" BorderBrush="{DynamicResource ActivityBarBorderBrush}" BorderThickness="0,0,1,0">
                <DockPanel>
                    <!-- Top Buttons -->
                    <StackPanel DockPanel.Dock="Top">
                        <!-- Explorer Button -->
                        <RadioButton Style="{StaticResource ActivityBarButtonStyle}"
                                     GroupName="ActivityBar"
                                     Tag="Explorer"
                                     Click="ActivityBarButton_Click"
                                     IsChecked="{Binding SelectedSidebarView, Converter={StaticResource SidebarViewToBoolConverter}, ConverterParameter=Explorer, Mode=OneWay}"
                                     ToolTip="Explorer (Ctrl+Shift+E)">
                            <Path Data="M20,18H4V8H20M20,6H12L10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6Z"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                  Width="24" Height="24" Stretch="Uniform"/>
                        </RadioButton>

                        <!-- Git Changes Button -->
                        <RadioButton Style="{StaticResource ActivityBarButtonStyle}"
                                     GroupName="ActivityBar"
                                     Tag="GitChanges"
                                     Click="ActivityBarButton_Click"
                                     IsChecked="{Binding SelectedSidebarView, Converter={StaticResource SidebarViewToBoolConverter}, ConverterParameter=GitChanges, Mode=OneWay}"
                                     ToolTip="Source Control (Ctrl+Shift+G)">
