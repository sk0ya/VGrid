                                  Width="24" Height="24" Stretch="Uniform"/>
                        </RadioButton>
                    </StackPanel>

                    <!-- Empty filler -->
                    <Border/>
                </DockPanel>
            </Border>

            <!-- Sidebar Content -->
            <Border Grid.Column="1" BorderBrush="{DynamicResource SidebarBorderBrush}" BorderThickness="0,0,1,0"
                    Visibility="{Binding IsSidebarOpen, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <!-- EXPLORER Panel -->
                    <DockPanel Background="{DynamicResource SidebarBackgroundBrush}"
                               Visibility="{Binding SelectedSidebarView, Converter={StaticResource SidebarViewToVisibilityConverter}, ConverterParameter=Explorer}">
                        <!-- Header Section -->
                        <Border DockPanel.Dock="Top" Background="{DynamicResource SidebarHeaderBackgroundBrush}"
                                BorderBrush="{DynamicResource SidebarBorderBrush}" BorderThickness="0,0,0,1" Padding="12,8">
                            <TextBlock Text="EXPLORER" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SidebarHeaderForegroundBrush}" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Filter Box -->
                        <Border DockPanel.Dock="Top" Background="{DynamicResource SidebarBackgroundBrush}"
                                BorderBrush="{DynamicResource SidebarBorderBrush}" BorderThickness="0,0,0,1" Padding="6,4">
                            <Border Background="{DynamicResource TextBoxBackgroundBrush}"
                                    BorderBrush="{DynamicResource TextBoxBorderBrush}" BorderThickness="1"
                                    CornerRadius="3">
                                <Grid>
                                    <TextBlock Text="Filter files..."
                                               Foreground="{DynamicResource TextBoxPlaceholderBrush}"
                                               Margin="8,0"
                                               IsHitTestVisible="False"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FilterText}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding FilterText}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                                             Height="24"
                                             Padding="8,2"
                                             Background="Transparent"
                                             Foreground="{DynamicResource TextBoxForegroundBrush}"
                                             CaretBrush="{DynamicResource TextBoxForegroundBrush}"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             FontSize="12"/>
                                </Grid>
                            </Border>
                        </Border>

                        <!-- TreeView -->
                        <TreeView x:Name="FolderTreeView"
                                  BorderThickness="0"
                                  Background="{DynamicResource TreeViewBackgroundBrush}"
                                  Foreground="{DynamicResource TreeViewForegroundBrush}"
                                  Margin="0"
                                  Padding="6"
                                  KeyDown="FolderTreeView_KeyDown"
                                  MouseRightButtonUp="FolderTreeView_MouseRightButtonUp"
                                  FontSize="12">
                        </TreeView>
                    </DockPanel>

                    <!-- Git Changes Panel -->
                    <DockPanel Background="{DynamicResource SidebarBackgroundBrush}"
                               Visibility="{Binding SelectedSidebarView, Converter={StaticResource SidebarViewToVisibilityConverter}, ConverterParameter=GitChanges}">
                        <!-- Header Section -->
                        <Border DockPanel.Dock="Top" Background="{DynamicResource SidebarHeaderBackgroundBrush}"
                                BorderBrush="{DynamicResource SidebarBorderBrush}" BorderThickness="0,0,0,1" Padding="12,8">
                            <TextBlock Text="SOURCE CONTROL" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SidebarHeaderForegroundBrush}" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Commit Message and Button (Bottom) -->
                        <Border DockPanel.Dock="Bottom" Height="100" Padding="5" Background="{DynamicResource SidebarBackgroundBrush}">
                            <DockPanel>
                                <Button DockPanel.Dock="Bottom" Content="Commit"
                                        Command="{Binding GitChangesViewModel.CommitCommand}"
                                        Background="{DynamicResource ButtonBackgroundBrush}"
                                        Foreground="{DynamicResource ButtonForegroundBrush}"
                                        BorderBrush="{DynamicResource ButtonBorderBrush}"
                                        Width="Auto" Margin="5,5,5,5"
                                        HorizontalAlignment="Left" Padding="10,3"/>

                                <TextBox Text="{Binding GitChangesViewModel.CommitMessage, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True" TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         Background="{DynamicResource TextBoxBackgroundBrush}"
                                         Foreground="{DynamicResource TextBoxForegroundBrush}"
                                         BorderBrush="{DynamicResource TextBoxBorderBrush}" BorderThickness="1"
                                         Margin="5" Padding="5">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Modifiers="Ctrl"
                                                    Command="{Binding GitChangesViewModel.CommitCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </DockPanel>
                        </Border>

                        <!-- Uncommitted Files List (Fill remaining space) -->
                        <ListBox x:Name="GitChangesListBox"
                                 ItemsSource="{Binding GitChangesViewModel.UncommittedFiles}"
                                 Background="{DynamicResource ListBoxBackgroundBrush}"
                                 Foreground="{DynamicResource ListBoxForegroundBrush}"
                                 BorderBrush="{DynamicResource ListBoxBorderBrush}" BorderThickness="1"
                                 Margin="5"
                                 MouseDoubleClick="GitChangesListBox_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="2">
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                  VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding StatusText}"
                                                   FontWeight="Bold" Width="20"
                                                   Foreground="Orange" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding RelativePath}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="編集"
                                              Command="{Binding GitChangesViewModel.EditFileCommand}"
                                              CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="差分表示"
                                              Command="{Binding GitChangesViewModel.ShowDiffCommand}"
                                              CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    <MenuItem Header="エクスプローラーでフォルダを開く"
                                              Command="{Binding GitChangesViewModel.OpenFolderCommand}"
                                              CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="エディタで開く"
                                              Command="{Binding GitChangesViewModel.OpenInEditorCommand}"
                                              CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    <MenuItem Header="元に戻す"
                                              Command="{Binding GitChangesViewModel.RevertFileCommand}"
                                              CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                    </DockPanel>

                    <!-- Template Panel -->
                    <DockPanel Background="{DynamicResource SidebarBackgroundBrush}"
                               Visibility="{Binding SelectedSidebarView, Converter={StaticResource SidebarViewToVisibilityConverter}, ConverterParameter=Template}">
                        <!-- Header Section -->
                        <Border DockPanel.Dock="Top" Background="{DynamicResource SidebarHeaderBackgroundBrush}"
                                BorderBrush="{DynamicResource SidebarBorderBrush}" BorderThickness="0,0,0,1" Padding="12,8">
                            <TextBlock Text="TEMPLATES" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SidebarHeaderForegroundBrush}" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Toolbar -->
                        <Border DockPanel.Dock="Top" Background="{DynamicResource SidebarBackgroundBrush}"
                                BorderBrush="{DynamicResource SidebarBorderBrush}" BorderThickness="0,0,0,1" Padding="8">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="+ New" Click="NewTemplateButton_Click"
                                        Padding="8,4" Margin="0,0,4,0"
                                        Background="{DynamicResource ButtonBackgroundBrush}"
                                        Foreground="{DynamicResource ButtonForegroundBrush}"
                                        BorderBrush="{DynamicResource ButtonBorderBrush}"
                                        ToolTip="Create a new template"/>
                                <Button Content="Folder" Click="NewTemplateFolderButton_Click"
                                        Padding="8,4" Margin="0,0,4,0"
                                        Background="{DynamicResource ButtonBackgroundBrush}"
                                        Foreground="{DynamicResource ButtonForegroundBrush}"
                                        BorderBrush="{DynamicResource ButtonBorderBrush}"
                                        ToolTip="Create a new folder"/>
                                <Button Content="Refresh" Click="RefreshTemplateButton_Click"
                                        Padding="8,4"
                                        Background="{DynamicResource ButtonBackgroundBrush}"
                                        Foreground="{DynamicResource ButtonForegroundBrush}"
                                        BorderBrush="{DynamicResource ButtonBorderBrush}"
                                        ToolTip="Refresh template list"/>
                            </StackPanel>
                        </Border>

                        <!-- TreeView for Templates -->
                        <TreeView x:Name="TemplateTreeView"
                                  BorderThickness="0"
                                  Background="{DynamicResource TreeViewBackgroundBrush}"
                                  Foreground="{DynamicResource TreeViewForegroundBrush}"
                                  Margin="0"
                                  Padding="6"
                                  KeyDown="TemplateTreeView_KeyDown"
                                  MouseRightButtonUp="TemplateTreeView_MouseRightButtonUp"
                                  FontSize="12">
                        </TreeView>
                    </DockPanel>

                    <!-- Settings Panel -->
                    <DockPanel Background="{DynamicResource SidebarBackgroundBrush}"
                               Visibility="{Binding SelectedSidebarView, Converter={StaticResource SidebarViewToVisibilityConverter}, ConverterParameter=Settings}">
                        <!-- Header Section -->
                        <Border DockPanel.Dock="Top" Background="{DynamicResource SidebarHeaderBackgroundBrush}"
                                BorderBrush="{DynamicResource SidebarBorderBrush}" BorderThickness="0,0,0,1" Padding="12,8">
                            <TextBlock Text="SETTINGS" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource SidebarHeaderForegroundBrush}" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Settings Content -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Margin="12,8">
                                <!-- Editor Section -->
                                <TextBlock Text="Editor" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SidebarHeaderForegroundBrush}"
                                           Margin="0,0,0,8"/>

                                <!-- Vim Mode Toggle -->
                                <Border Background="{DynamicResource SidebarItemHoverBrush}"
                                        CornerRadius="4" Padding="12,8" Margin="0,0,0,8">
                                    <DockPanel>
                                        <CheckBox DockPanel.Dock="Right"
                                                  IsChecked="{Binding IsVimModeEnabled, Mode=TwoWay}"
                                                  VerticalAlignment="Center"/>
                                        <StackPanel>
                                            <TextBlock Text="Vim Mode"
                                                       Foreground="{DynamicResource SidebarForegroundBrush}"
                                                       FontSize="12"/>
                                            <TextBlock Text="Enable Vim keybindings for navigation and editing"
                                                       Foreground="{DynamicResource SidebarHeaderForegroundBrush}"
                                                       FontSize="10" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>

                                <!-- Appearance Section -->
                                <TextBlock Text="Appearance" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SidebarHeaderForegroundBrush}"
                                           Margin="0,16,0,8"/>

                                <!-- Color Theme -->
                                <Border Background="{DynamicResource SidebarItemHoverBrush}"
                                        CornerRadius="4" Padding="12,8" Margin="0,0,0,8">
                                    <DockPanel>
                                        <ComboBox DockPanel.Dock="Right"
                                                  ItemsSource="{Binding ColorThemes}"
                                                  SelectedItem="{Binding SelectedColorTheme, Mode=TwoWay}"
                                                  VerticalAlignment="Center"
                                                  Width="80"
                                                  Background="{DynamicResource TextBoxBackgroundBrush}"
                                                  Foreground="{DynamicResource TextBoxForegroundBrush}"
                                                  BorderBrush="{DynamicResource TextBoxBorderBrush}"/>
                                        <StackPanel>
                                            <TextBlock Text="Color Theme"
                                                       Foreground="{DynamicResource SidebarForegroundBrush}"
                                                       FontSize="12"/>
                                            <TextBlock Text="Select color theme for the application"
                                                       Foreground="{DynamicResource SidebarHeaderForegroundBrush}"
                                                       FontSize="10" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>

                                <!-- About Section -->
                                <TextBlock Text="About" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SidebarHeaderForegroundBrush}"
                                           Margin="0,16,0,8"/>

                                <Border Background="{DynamicResource SidebarItemHoverBrush}"
                                        CornerRadius="4" Padding="12,8">
                                    <StackPanel>
                                        <TextBlock Text="VGrid - TSV Editor"
                                                   Foreground="{DynamicResource SidebarForegroundBrush}"
                                                   FontSize="12" FontWeight="SemiBold"/>
                                        <TextBlock Text="A powerful TSV editor with Vim keybindings"
                                                   Foreground="{DynamicResource SidebarHeaderForegroundBrush}"
                                                   FontSize="10" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Stretch" Background="{DynamicResource SplitterBackgroundBrush}"
                          Visibility="{Binding IsSidebarOpen, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Tab Control (Right Panel) -->
            <TabControl Grid.Column="3"
                        ItemsSource="{Binding Tabs}"
                        SelectedItem="{Binding SelectedTab}"
                        Background="{DynamicResource TabBackgroundBrush}"
                        Margin="0" BorderThickness="0">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" MouseDown="TabHeader_MouseDown">
                            <TextBlock Text="{Binding Header}"
                                       Foreground="{DynamicResource TabForegroundBrush}"
                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Button Content="×" FontSize="14" FontWeight="Bold"
                                    Width="18" Height="18"
                                    Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Foreground="{DynamicResource TabForegroundBrush}"
                                    Background="Transparent" BorderThickness="0"
                                    Cursor="Hand" ToolTip="Close"/>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <!-- DataGrid Layer -->
                            <Border BorderBrush="Gray" BorderThickness="0" Margin="0">
                                <DataGrid x:Name="TsvGrid"
                                          ItemsSource="{Binding GridViewModel.Rows}"
                                          AlternationCount="999999"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          CanUserReorderColumns="False"
                                          CanUserSortColumns="False"
                                          CanUserResizeColumns="False"
                                          CanUserResizeRows="False"
                                          IsReadOnly="False"
                                          SelectionMode="Extended"
                                          SelectionUnit="Cell"
                                          DataContextChanged="TsvGrid_OnDataContextChanged"
                                          BeginningEdit="TsvGrid_BeginningEdit"
                                          CellEditEnding="TsvGrid_CellEditEnding"
                                          HeadersVisibility="All"
                                          Focusable="False"
                                          EnableRowVirtualization="True"
                                          EnableColumnVirtualization="True"
                                          VirtualizingPanel.IsVirtualizing="True"
                                          VirtualizingPanel.VirtualizationMode="Recycling"
                                          Style="{StaticResource ExcelDataGridStyle}"
                                          ColumnHeaderStyle="{StaticResource ExcelColumnHeaderStyle}"
                                          RowHeaderStyle="{StaticResource ExcelRowHeaderStyle}"
                                          RowStyle="{StaticResource ExcelRowStyle}"
                                          CellStyle="{StaticResource ExcelCellStyle}"
                                          FontFamily="Segoe UI"
                                          FontSize="11"
                                          Loaded="TsvGrid_Loaded"
                                          Margin="0">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Cut" InputGestureText="Ctrl+X" Click="ContextMenu_Cut_Click" Template="{StaticResource MenuItemItemTemplate}"/>
                                            <MenuItem Header="Copy" InputGestureText="Ctrl+C" Click="ContextMenu_Copy_Click" Template="{StaticResource MenuItemItemTemplate}"/>
                                            <MenuItem Header="Paste" InputGestureText="Ctrl+V" Click="ContextMenu_Paste_Click" Template="{StaticResource MenuItemItemTemplate}"/>
                                            <Separator/>
                                            <MenuItem Header="Delete" InputGestureText="Del" Click="ContextMenu_Delete_Click" Template="{StaticResource MenuItemItemTemplate}"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <!-- Columns will be generated dynamically in code-behind -->
                                </DataGrid>
                            </Border>

                            <!-- Find/Replace Panel Overlay -->
                            <views:FindReplacePanel DataContext="{Binding FindReplaceViewModel}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="20,10,20,0"
                                                   Panel.ZIndex="100"/>
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
