<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="Black"/>

    <!-- Menu -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="MenuBorderBrush" Color="#D0D0D0"/>

    <!-- Status Bar -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="Black"/>

    <!-- Activity Bar -->
    <SolidColorBrush x:Key="ActivityBarBackgroundBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="ActivityBarBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ActivityBarForegroundBrush" Color="#6F6F6F"/>
    <SolidColorBrush x:Key="ActivityBarHoverBackgroundBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="ActivityBarActiveForegroundBrush" Color="#424242"/>
    <SolidColorBrush x:Key="ActivityBarIndicatorBrush" Color="#424242"/>

    <!-- Sidebar -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SidebarHeaderBackgroundBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="SidebarHeaderForegroundBrush" Color="#6F6F6F"/>
    <SolidColorBrush x:Key="SidebarForegroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SidebarItemHoverBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="SidebarItemSelectedBrush" Color="#E3F2FD"/>

    <!-- TreeView -->
    <SolidColorBrush x:Key="TreeViewBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="TreeViewForegroundBrush" Color="Black"/>

    <!-- TextBox -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="TextBoxPlaceholderBrush" Color="#AAAAAA"/>

    <!-- Button -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="ButtonDisabledBorderBrush" Color="#D0D0D0"/>

    <!-- ListBox -->
    <SolidColorBrush x:Key="ListBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ListBoxForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="ListBoxBorderBrush" Color="#CCCCCC"/>

    <!-- DataGrid -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="DataGridForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="#BEBEBE"/>
    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="DataGridHeaderForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="DataGridCellBorderBrush" Color="#EBEBEB"/>
    <SolidColorBrush x:Key="DataGridCellSelectedBrush" Color="#E8F4FC"/>
    <SolidColorBrush x:Key="DataGridCellSelectedBorderBrush" Color="#A0C8E8"/>
    <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="DataGridCurrentRowHeaderBrush" Color="#BFDDF5"/>
    <SolidColorBrush x:Key="DataGridCurrentColumnHeaderBrush" Color="#BFDDF5"/>

    <!-- TabControl -->
    <SolidColorBrush x:Key="TabBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TabForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="TabHeaderBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="TabHeaderSelectedBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TabBorderBrush" Color="#D0D0D0"/>

    <!-- Splitter -->
    <SolidColorBrush x:Key="SplitterBackgroundBrush" Color="#E0E0E0"/>

    <!-- ScrollBar -->
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#CDCDCD"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#A6A6A6"/>

    <!-- DataGrid SelectAll Button (top-left corner) -->
    <SolidColorBrush x:Key="DataGridSelectAllButtonBrush" Color="#F0F0F0"/>

</ResourceDictionary>
