<UserControl x:Class="VGrid.Views.CommandPalettePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:VGrid.ViewModels"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="{DynamicResource SearchPanelBackgroundBrush}"
            BorderBrush="{DynamicResource SearchPanelBorderBrush}"
            BorderThickness="1"
            CornerRadius="3"
            Padding="0"
            Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
            Width="450"
            MaxHeight="400">

        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" BlurRadius="10" Opacity="0.35"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Box Row -->
            <Grid Grid.Row="0" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mode Indicator -->
                <Border Grid.Column="0"
                        Background="{DynamicResource DataGridCellSelectedBrush}"
                        CornerRadius="3"
                        Padding="8,4"
                        Margin="0,0,8,0"
                        Cursor="Hand"
                        MouseLeftButtonDown="ModeIndicator_MouseLeftButtonDown"
                        ToolTip="Click or press Ctrl+P to cycle modes">
                    <TextBlock Text="{Binding ModeText}"
                               Foreground="{DynamicResource SearchPanelForegroundBrush}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </Border>

                <TextBox x:Name="FilterTextBox"
                         Grid.Column="1"
                         Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8,6"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         Background="{DynamicResource TextBoxBackgroundBrush}"
                         Foreground="{DynamicResource TextBoxForegroundBrush}"
                         BorderBrush="{DynamicResource TextBoxBorderBrush}"
                         BorderThickness="1"
                         CaretBrush="{DynamicResource TextBoxForegroundBrush}"/>

                <Button Grid.Column="2"
                        Content="x"
                        Command="{Binding CloseCommand}"
                        Width="24"
                        Height="24"
                        Margin="6,0,0,0"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="{DynamicResource CloseButtonForegroundBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource CloseButtonHoverForegroundBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Items List -->
            <ListBox x:Name="ActionListBox"
                     Grid.Row="1"
                     ItemsSource="{Binding FilteredItems}"
                     SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                     Background="Transparent"
                     BorderThickness="0"
                     Margin="0,0,0,4"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SidebarItemHoverBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource DataGridCellSelectedBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:CommandPaletteItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Item Type Icon -->
                            <TextBlock Grid.Column="0"
                                       Foreground="{DynamicResource SearchMatchCountForegroundBrush}"
                                       FontSize="11"
                                       FontFamily="Segoe UI Symbol"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Width="16">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value=""/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ItemType}" Value="Command">
                                                <Setter Property="Text" Value=">"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ItemType}" Value="File">
                                                <Setter Property="Text" Value="&#xE130;"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Display Name or Relative Path -->
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock Text="{Binding DisplayName}"
                                           Foreground="{DynamicResource SearchPanelForegroundBrush}"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                                <!-- Show relative path for files -->
                                <TextBlock Text="{Binding RelativePath}"
                                           Foreground="{DynamicResource SearchMatchCountForegroundBrush}"
                                           FontSize="10"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Opacity="0.7">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ItemType}" Value="File">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- Key Binding (for commands) -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding KeyBinding}"
                                       Foreground="{DynamicResource SearchMatchCountForegroundBrush}"
                                       FontSize="11"
                                       FontFamily="Consolas"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       Opacity="0.8">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ItemType}" Value="File">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
