<Window x:Class="VGrid.Views.CreateTemplateSetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="テンプレートセットの作成"
        Height="550" Width="600"
        Background="{DynamicResource WindowBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="False"
        WindowStartupLocation="CenterOwner">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="MinWidth" Value="24"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{DynamicResource TitleBarBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TitleBarText" Grid.Column="0" Text="テンプレートセットの作成" FontSize="12"
                       Foreground="{DynamicResource TitleBarForegroundBrush}"
                       VerticalAlignment="Center" Margin="12,0,0,0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button x:Name="CloseButton" Click="CloseButton_Click"
                        Width="46" Height="32" BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        ToolTip="閉じる">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Path Data="M0,0 L10,10 M10,0 L0,10"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="1" Width="10" Height="10"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Set Name -->
            <TextBlock Grid.Row="0" Text="セット名" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBoxForegroundBrush}"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="SetNameTextBox" Grid.Row="1"
                     Padding="8,6"
                     Background="{DynamicResource TextBoxBackgroundBrush}"
                     Foreground="{DynamicResource TextBoxForegroundBrush}"
                     BorderBrush="{DynamicResource ButtonBorderBrush}"
                     TextChanged="SetNameTextBox_TextChanged"
                     Margin="0,0,0,16"/>

            <!-- Template Tree -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="テンプレート（ダブルクリックで追加）" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBoxForegroundBrush}"
                           Margin="0,0,0,8"/>

                <Border Grid.Row="1" Background="{DynamicResource ListBoxBackgroundBrush}"
                        BorderBrush="{DynamicResource ButtonBorderBrush}"
                        BorderThickness="1" CornerRadius="3">
                    <TreeView x:Name="TemplateTreeView"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="{DynamicResource ListBoxForegroundBrush}"
                              MouseDoubleClick="TemplateTreeView_MouseDoubleClick"/>
                </Border>
            </Grid>

            <!-- Selected Templates Label -->
            <TextBlock Grid.Row="3" Text="選択したテンプレート" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBoxForegroundBrush}"
                       Margin="0,16,0,8"/>

            <!-- Selected Templates List -->
            <Border Grid.Row="4" Background="{DynamicResource ListBoxBackgroundBrush}"
                    BorderBrush="{DynamicResource ButtonBorderBrush}"
                    BorderThickness="1" CornerRadius="3"
                    MinHeight="100" MaxHeight="150">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="SelectedTemplatesPanel" Margin="4"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Buttons -->
        <Border Grid.Row="2" Padding="16"
                Background="{DynamicResource SidebarBackgroundBrush}"
                BorderBrush="{DynamicResource SidebarBorderBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="キャンセル" Click="CancelButton_Click"
                        Style="{StaticResource DialogButtonStyle}" Margin="0,0,8,0"/>
                <Button x:Name="CreateButton" Content="作成" Click="CreateButton_Click"
                        Style="{StaticResource DialogButtonStyle}" IsEnabled="False"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
