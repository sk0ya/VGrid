<UserControl x:Class="VGrid.Views.GitHistoryOverlayPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

    <Border Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource SearchPanelBorderBrush}"
            BorderThickness="1"
            CornerRadius="3"
            Width="800" Height="500">

        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" BlurRadius="10" Opacity="0.35"/>
        </Border.Effect>

        <DockPanel>
            <!-- Header Bar -->
            <Grid DockPanel.Dock="Top" Height="32" Background="{DynamicResource TitleBarBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Git History" FontWeight="SemiBold" FontSize="12"
                           Foreground="{DynamicResource TitleBarForegroundBrush}"
                           VerticalAlignment="Center" Margin="12,0,0,0"/>

                <Button x:Name="CloseButton" Click="CloseButton_Click"
                        Grid.Column="1"
                        Width="32" Height="32" BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        ToolTip="Close (Esc)">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Path Data="M0,0 L10,10 M10,0 L0,10"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="1" Width="10" Height="10"/>
                </Button>
            </Grid>

            <!-- Commit History List -->
            <Border BorderBrush="{DynamicResource ListBoxBorderBrush}" BorderThickness="1" Margin="10">
                <ListBox x:Name="CommitListBox"
                         ItemsSource="{Binding Commits}"
                         SelectionMode="Extended"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         MouseDoubleClick="CommitListBox_MouseDoubleClick"
                         Background="{DynamicResource ListBoxBackgroundBrush}"
                         Foreground="{DynamicResource ListBoxForegroundBrush}"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText, Mode=OneWay}"
                                       Margin="5"
                                       TextTrimming="CharacterEllipsis"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="View Diff vs Working Directory"
                                      Command="{Binding ViewDiffVsWorkingCommand}"/>
                            <MenuItem Header="View Diff vs Parent Commit"
                                      Command="{Binding ViewDiffVsParentCommand}"/>
                            <Separator/>
                            <MenuItem Header="Compare Selected Commits"
                                      Command="{Binding ViewDiffBetweenCommitsCommand}"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
            </Border>
        </DockPanel>
    </Border>
</UserControl>
