<Window x:Class="VGrid.Views.GitHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git History - Folder" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">

    <DockPanel>
        <!-- Commit History List -->
        <Border BorderBrush="{DynamicResource ListBoxBorderBrush}" BorderThickness="1" Margin="10">
            <ListBox x:Name="CommitListBox"
                         ItemsSource="{Binding Commits}"
                         SelectionMode="Extended"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         MouseDoubleClick="CommitListBox_MouseDoubleClick"
                         Background="{DynamicResource ListBoxBackgroundBrush}"
                         Foreground="{DynamicResource ListBoxForegroundBrush}"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText, Mode=OneWay}"
                                       Margin="5"
                                       TextTrimming="CharacterEllipsis"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="View Diff vs Working Directory"
                                      Command="{Binding ViewDiffVsWorkingCommand}"/>
                            <MenuItem Header="View Diff vs Parent Commit"
                                      Command="{Binding ViewDiffVsParentCommand}"/>
                            <Separator/>
                            <MenuItem Header="Compare Selected Commits"
                                      Command="{Binding ViewDiffBetweenCommitsCommand}"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
        </Border>
    </DockPanel>
</Window>
