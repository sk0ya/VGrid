<Window x:Class="VGrid.Views.GitHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git History - Folder" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="False">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <DockPanel>
        <!-- Custom Title Bar -->
        <Grid DockPanel.Dock="Top" Height="32" Background="{DynamicResource TitleBarBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Grid.Column="0" Text="Git History" FontWeight="SemiBold" FontSize="12"
                       Foreground="{DynamicResource TitleBarForegroundBrush}"
                       VerticalAlignment="Center" Margin="12,0,0,0"/>

            <!-- Window Control Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button x:Name="MinimizeButton" Click="MinimizeButton_Click"
                        Width="46" Height="32" BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        ToolTip="Minimize">
                    <Path Data="M0,5 L10,5" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="1" Width="10" Height="10"/>
                </Button>
                <Button x:Name="MaximizeButton" Click="MaximizeButton_Click"
                        Width="46" Height="32" BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        ToolTip="Maximize">
                    <Path Data="M0,0 L10,0 L10,10 L0,10 Z"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="1" Fill="Transparent" Width="10" Height="10"/>
                </Button>
                <Button x:Name="CloseButton" Click="CloseButton_Click"
                        Width="46" Height="32" BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TitleBarForegroundBrush}"
                        ToolTip="Close">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Path Data="M0,0 L10,10 M10,0 L0,10"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="1" Width="10" Height="10"/>
                </Button>
            </StackPanel>
        </Grid>
        <!-- Commit History List -->
        <Border BorderBrush="{DynamicResource ListBoxBorderBrush}" BorderThickness="1" Margin="10">
            <ListBox x:Name="CommitListBox"
                         ItemsSource="{Binding Commits}"
                         SelectionMode="Extended"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         MouseDoubleClick="CommitListBox_MouseDoubleClick"
                         Background="{DynamicResource ListBoxBackgroundBrush}"
                         Foreground="{DynamicResource ListBoxForegroundBrush}"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText, Mode=OneWay}"
                                       Margin="5"
                                       TextTrimming="CharacterEllipsis"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="View Diff vs Working Directory"
                                      Command="{Binding ViewDiffVsWorkingCommand}"/>
                            <MenuItem Header="View Diff vs Parent Commit"
                                      Command="{Binding ViewDiffVsParentCommand}"/>
                            <Separator/>
                            <MenuItem Header="Compare Selected Commits"
                                      Command="{Binding ViewDiffBetweenCommitsCommand}"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
        </Border>
    </DockPanel>
</Window>
